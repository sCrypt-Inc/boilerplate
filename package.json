{
  "name": "scrypt-ts-example",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "prebuild": "npm run clean",
    "build": "tsc",
    "clean": "rimraf scrypt.index.json && rimraf dist && rimraf scrypts",
    "pretest": "npm run build",
    "test": "mocha 'dist/tests/**/*.test.js' --timeout 1200000",
    "testnet": "npm run build && mocha 'dist/tests/testnet/**/*.js' --timeout 1200000",
    "lint": "eslint . --ext .ts --fix && prettier --write --config .prettierrc --ignore-unknown \"**/*\"",
    "lint-check": "eslint . --ext .ts && prettier --check --config .prettierrc --ignore-unknown \"**/*\"",
    "prepare": "husky install"
  },
  "lint-staged": {
    "**/*": [
      "eslint . --ext .ts --fix",
      "prettier --write --config .prettierrc --ignore-unknown"
    ]
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "=1.1.3",
    "scrypt-ts": "=0.1.5-beta.4"
  },
  "devDependencies": {
    "@types/chai": "^4.3.4",
    "@types/mocha": "^10.0.0",
    "@types/node": "^18.11.9",
    "chai": "^4.3.7",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "mocha": "^10.1.0",
    "rimraf": "^3.0.2",
    "typescript": "=4.8.4",
    "prettier": "^2.8.2",
    "eslint": "^8.31.0",
    "@typescript-eslint/parser": "^5.48.1",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "eslint-config-prettier": "^8.6.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.0"
  }
